<div class="register-container animated fadeInDown">
    <div class="registerbox  bg-purple">
        <div class="registerbox-title white">
            REGISTER
        </div>
        <div class="registerbox-caption">
            Please fill in your information
        </div>
        <div class="registerbox-textbox">
            <input type="text" id="username" class="form-control" placeholder="Username">
        </div>
        <div class="registerbox-textbox">
            <input type="password" id="password" class="form-control" placeholder="Password">
        </div>
        <div class="registerbox-textbox">
            <input type="password" id="repeatPassword" class="form-control" placeholder="Confirm Password">
        </div>


        <div class="registerbox-submit margin-top-10">
            <input type="button" id="submitButton" class="btn btn-default pull-right" value="Submit" disabled>
        </div>

        <div id="result" class="loginbox-forgot white margin-top-10 margin-left-20">
        </div>

    </div>

    <div class="logobox  bg-purple"></div>
</div>

{{#section 'jquery'}}
    <script type="text/javascript" src="javascripts/register.js"></script>
{{/section}}