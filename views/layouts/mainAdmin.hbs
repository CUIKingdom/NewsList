<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <!--<!--Basic Styles-->
    <link rel="stylesheet" media="screen" href="/stylesheets/bootstrap-default/3.3.6/bootstrap.css">
    <link href="/stylesheets/font-awesome.css" rel="stylesheet">
    <link href="/stylesheets/weather-icons.css" rel="stylesheet">
    <!--fonts-->
    <!--<link href="http://fonts.useso.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300" rel="stylesheet" type="text/css">-->
    <!--Beyond Styles-->
    <link id="beyond-link" href="/stylesheets/bootstrap-default/3.3.4/bootstrap.css" rel="stylesheet" type="text/css">
    <link id="beyond-link" href="/stylesheets/beyondadmin/1.4.2/beyond.css" rel="stylesheet" type="text/css">
    <link href="/stylesheets/demo.css" rel="stylesheet">
    <link href="/stylesheets/typicons.css" rel="stylesheet">
    <link href="/stylesheets/animate.css" rel="stylesheet">
    <!--main-->
    <link rel="stylesheet" media="screen" href="/stylesheets/admin/main.css">
    <!--favicon-->
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png">

    <!--basic javascripts-->
    <script src="/javascripts/jquery/2.1.3/jquery.js" type="text/javascript"></script>
    <script src="/javascripts/bootstrap/3.3.6/bootstrap.js" type="text/javascript"></script>
    <script src="/javascripts/beyondadmin/1.4.2/beyond.js" type="text/javascript"></script>

    <!--related javascript-->
    <script src="/javascripts/angularjs/1.2.29/angular.min.js" type="text/javascript"></script>
    <script src="/javascripts/angularjs/1.2.29/angular-route.min.js" type="text/javascript"></script>

    {{{_sections.head}}}
</head>
<body>
<div class="navbar">
    <div class="navbar-inner bg-purple">
        <div class="navbar-container">
            <div class="navbar-header pull-left">
                <a href="/" class="navbar-brand">
                    <small>
                        <img class="margin-left-20 margin-right-10" style="width: auto; height: 32px" src="/images/favicon.png" alt="">
                        NewsCrawler
                    </small>
                </a>
            </div>

            <div class="navbar-header pull-right signIn">
                {{#if islogin}}
                    <a href="#" class="navbar-brand">
                        <small class="margin-right-20" style="font-size: medium">
                            Hello, {{islogin}}
                        </small>
                    </a>
                    <a href="/logout" class="navbar-brand">
                        <small class="margin-right-20" style="font-size: medium">
                            Logout
                        </small>
                    </a>
                    {{#if role}}
                        <a href="/admin/index" class="navbar-brand">
                            <small class="margin-right-20" style="font-size: medium">
                                后台管理
                            </small>
                        </a>
                    {{/if}}
                {{else}}
                    <a href="/login" class="navbar-brand">
                        <small class="margin-right-20" style="font-size: medium">
                            SignIn
                        </small>
                    </a>
                    <a href="/register" class="navbar-brand">
                        <small class="margin-right-20" style="font-size: medium">
                            Register
                        </small>
                    </a>
                {{/if}}

            </div>
        </div>
    </div>
</div>
<div class="main-container container-fluid">
    <div class="page-container">
        <div class="page-sidebar" id="sidebar">
            <ul class="nav sidebar-menu">
                <li id="newsMenu">
                    <a href="#" class="menu-dropdown">
                        <i class="menu-icon glyphicon glyphicon-home"></i>
                        <span class="menu-text">新闻管理</span>
                        <i class="menu-expand"></i>
                    </a>
                    <ul class="submenu" style="display: none">
                        <li id="newsListMenu">
                            <a href="/admin/index">
                                <span class="menu-text">新闻列表</span>
                            </a>
                        </li>
                        <li id="addNewsMenu">
                            <a href="/admin/addNews">
                                <span class="menu-text">新增新闻</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <li id="commentMenu">
                    <a href="/admin/comments">
                        <i class="menu-icon glyphicon glyphicon-home"></i>
                        <span class="menu-text">评论管理</span>
                    </a>
                </li>
            </ul>
        </div>
        {{{body}}}
    </div>
</div>

<script src="/javascripts/bootbox/bootbox.js" type="text/javascript"></script>
<script src="/javascripts/toastr/toastr.js" type="text/javascript"></script>
<script type="text/javascript" src="/javascripts/admin/adminManager.js"></script>
{{{_sections.jquery}}}

</body>
</html>
